    '1.0', // Ù†Ø³Ø®Ù‡ ÙØ§ÛŒÙ„
    true // true Ø¨Ø§Ø¹Ø« Ù…ÛŒâ€ŒØ´ÙˆØ¯ Ù‚Ø¨Ù„ Ø§Ø² Ø¨Ø³ØªÙ‡ Ø´Ø¯Ù† </body> Ø¨Ø§Ø±Ú¯Ø°Ø§Ø±ÛŒ Ø´ÙˆØ¯
  );
}
add_action('wp_enqueue_scripts', 'enqueue_hero_banner_script');
