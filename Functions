        const expireTime = parseInt(timer.dataset.expire) * 1000;

        function updateCountdown() {
          const now = new Date().getTime();
          const diff = expireTime - now;

          if (diff < 0) {
            timer.innerHTML = 'â›” Ø§ÛŒÙ† Ú©ÙˆÙ¾Ù† Ù…Ù†Ù‚Ø¶ÛŒ Ø´Ø¯Ù‡';
            timer.style.color = '#c0392b';
